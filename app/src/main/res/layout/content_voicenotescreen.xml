<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/content_voicenotescreen"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FAF2AD"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="my.awesome.lavanya.notesapp.Voicenotescreen"
    tools:showIn="@layout/activity_voicenotescreen">


    <TextView
        android:text="Tap on mic to speak"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="41dp"
        android:layout_centerHorizontal="true"
        android:textSize="30sp"
        android:id="@+id/textView" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@android:drawable/ic_btn_speak_now"
        android:layout_above="@+id/textView"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="37dp"
        android:id="@+id/imageButton" />

    <my.awesome.lavanya.notesapp.Lineedittext
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textMultiLine"
        android:ems="10"
        android:background="@android:color/transparent"
        android:layout_alignParentTop="true"
        android:layout_marginTop="19dp"
        android:id="@+id/editText"
        android:hint="Note"
        android:capitalize="words"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />
</RelativeLayout>
