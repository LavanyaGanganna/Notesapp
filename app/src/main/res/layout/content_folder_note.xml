<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/content_folder_note"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FAF2AD"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="my.awesome.lavanya.notesapp.FolderNote"
    tools:showIn="@layout/activity_folder_note">
    <my.awesome.lavanya.notesapp.Lineedittext
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textCapWords|textShortMessage"
        android:hint="Title:"
        android:background="@android:color/transparent"
        android:ems="10"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="10dp"
        android:id="@+id/titletext"
        android:textSize="2sp"
        android:textAllCaps="false"
        android:capitalize="words"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <my.awesome.lavanya.notesapp.Lineedittext
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:inputType="textMultiLine"
        android:hint="Note"
        android:background="@android:color/transparent"
        android:capitalize="words"
        android:ems="10"
        android:id="@+id/bodytext"
        android:textSize="19sp"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:gravity="top|left"
        android:layout_below="@+id/titletext" />
</RelativeLayout>
